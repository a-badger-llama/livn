<%= form_with(model: chat) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :user_id %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), chats_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), chat_path(@chat), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
