<%= content_for :header, "Tasks" %>
<%= turbo_stream_from :tasks %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Tasks</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500 dark:text-gray-300/75">Sort by:</span>
        <%= sortable @tasks, :title, "Title", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @tasks, :description, "Description", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @tasks, :due_at, "Due at", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @tasks, :taskable_id, "Taskable", class: "text-gray-700 dark:text-gray-300 mr-1" %>
      </div>
    </div>

    <%= link_to t("scaffold.new.title", model: "Task"), new_task_path, class: "btn btn-secondary" %>
  </div>

  <%= tag.div id: ("tasks" if first_page?), class: "bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "tasks/task", collection: @tasks, as: :task, cached: true %>

    <div class="hidden only:block text-center">
      <p class="mb-4 h3">Create your first Task</p>
      <%= link_to t("scaffold.new.title", model: "Task"), new_task_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
