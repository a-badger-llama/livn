<%= content_for :title, "Messages" %>
<%= turbo_stream_from :messages %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">Messages</h1>

    <%= link_to t("scaffold.new.title", model: "Message"), new_message_path, class: "btn btn-secondary" %>
  </div>

  <%= tag.div id: ("messages" if first_page?), class: "bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "messages/message", collection: @messages, as: :message, cached: true %>

    <div class="hidden only:block text-center">
      <p class="mb-4 h3">Create your first Message</p>
      <%= link_to t("scaffold.new.title", model: "Message"), new_message_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
